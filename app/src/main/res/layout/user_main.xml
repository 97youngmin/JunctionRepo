<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android2="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange">
    <include
        android:id="@+id/include"
        layout="@layout/toolbar"
        android:fitsSystemWindows="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:context="com.example.junctionxasia.MainActivity"
            tools:layout_editor_absoluteX="41dp">


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_bakery"
                android:layout_width="86dp"
                android:layout_height="88dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:outlineSpotShadowColor="@color/orange"
                android:outlineAmbientShadowColor="@color/orange"
                android:layout_alignParentRight="true"
                android:layout_marginStart="244dp"
                android:layout_marginLeft="247dp"
                android:layout_marginTop="77dp"
                android:layout_marginEnd="81dp"
                android:layout_marginRight="78dp"
                android:clickable="true"
                android:foreground="@drawable/bread"
                app:backgroundTint="@color/orange">


            </com.google.android.material.floatingactionbutton.FloatingActionButton>

            <TextView
                android:id="@+id/textbakery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_bakery"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="241dp"
                android:layout_marginLeft="241dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="85dp"
                android:layout_marginRight="85dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="Bakery" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_restaurant"
                android:layout_width="86dp"
                android:layout_height="88dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="78dp"
                android:layout_marginLeft="247dp"
                android:layout_marginTop="77dp"
                android:layout_marginEnd="247dp"
                android:layout_marginRight="78dp"
                android:clickable="true"
                android:foreground="@drawable/restaurant"
                android:outlineSpotShadowColor="@color/orange"
                android:outlineAmbientShadowColor="@color/orange"
                android:foregroundGravity="center|fill"
                app:backgroundTint="@color/orange" />

            <TextView
                android:id="@+id/textrestaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_restaurant"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="78dp"
                android:layout_marginLeft="78dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="248dp"
                android:layout_marginRight="248dp"
                android:gravity="center"
                android:text="Restaurant" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_foodcenter"
                android:layout_width="86dp"
                android:layout_height="88dp"
                android:layout_below="@+id/textrestaurant"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="248dp"
                android:layout_marginLeft="248dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="77dp"
                android:layout_marginRight="77dp"
                android:clickable="true"
                android:foreground="@drawable/food"
                android:outlineSpotShadowColor="@color/orange"
                android:outlineAmbientShadowColor="@color/orange"
                android:scaleType="center"
                app:backgroundTint="@color/orange" />

            <TextView
                android:id="@+id/textfoodcenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_below="@+id/btn_foodcenter"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="249dp"
                android:layout_marginLeft="248dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="76dp"
                android:layout_marginRight="78dp"
                android:gravity="center"
                android:text="Foodcenter" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_supermarket"
                android:layout_width="86dp"
                android:layout_height="88dp"
                android:layout_below="@+id/textrestaurant"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="78dp"
                android:layout_marginLeft="78dp"
                android:outlineSpotShadowColor="@color/orange"
                android:outlineAmbientShadowColor="@color/orange"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="247dp"
                android:layout_marginRight="247dp"
                android:clickable="true"
                android:foreground="@drawable/supermarket"
                android:foregroundGravity="fill_horizontal|fill_vertical"
                app:backgroundTint="@color/orange" />

            <TextView
                android:id="@+id/textsupermarket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_supermarket"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="79dp"
                android:textColor="@color/white"
                android:layout_marginLeft="78dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="247dp"
                android:layout_marginRight="248dp"
                android:gravity="center"
                android:text="Supermarket" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/pacifico"
                android:layout_below="@+id/textsupermarket"
                android:layout_margin="25dp"
                android:layout_marginTop="43dp"
                android:text="View All"
                android:textSize="25dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="-1dp" />


        </RelativeLayout>
    </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

